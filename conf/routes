# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page - we use the @controllers syntax here so that the router knows we are referring to a class. In turn it
# will call on the GlobalSettings.getController method to resolve the actual controller instance.
GET     /                               @controllers.rest.Application.index

GET		/persons					    @controllers.rest.Application.persons

#FACTORY SERVICES

#Get all data during factory reset or startup
GET     /factory/courses/data           @controllers.rest.FactoryServicesController.coreFactorySettingsData

# Find out all available chapters available for a Course
GET     /chapters/:subjectId            @controllers.rest.ChapterController.chapters(subjectId: Long)

#Find questions answers for a specific module
GET     /question/answers/:moduleId     @controllers.rest.QuestionAnswerController.questionAnswers(moduleId: Long)

#Get all questions. To be removed.
GET     /questions                      @controllers.rest.QuestionAnswerController.getQuestions

GET     /bootstrap/db                   @controllers.rest.DatabaseController.insertDataIntoDatabase


#Interfaces for Admin Users
POST    /admin/add/subject               @controllers.rest.AdminUserController.addSubject

POST    /admin/add/chapter               @controllers.rest.AdminUserController.addChapter

POST    /admin/add/qa                    @controllers.rest.AdminUserController.addQuestionAnswers

GET     /admin/get/subjects              @controllers.rest.AdminUserController.getAllSubjects

GET     /admin/get/chapters/:subjectId   @controllers.rest.AdminUserController.getAllChapters(subjectId: Long)

GET     /admin/get/qa/:chapterId         @controllers.rest.AdminUserController.getAllQuestionAnswer(chapterId: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/courses/*file           controllers.Assets.at(path="/public/courses", file)